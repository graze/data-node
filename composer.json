{
    "name": "graze/data-node",
    "description": "Common package containing the base Node for DataFlow",
    "keywords": [
        "graze",
        "data-node"
    ],
    "homepage": "https://github.com/graze/data-node",
    "license": "MIT",
    "authors": [
        {
            "name": "Harry Bragg",
            "email": "harry.bragg@graze.com",
            "role": "Developer"
        },
        {
            "name": "Graze Developers",
            "email": "developers@graze.com",
            "homepage": "http://www.graze.com",
            "role": "Development Team"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "graze/data-structure": "^2.0",
        "squizlabs/php_codesniffer": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
        "psr-4": {
            "Graze\\DataNode\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Graze\\DataNode\\Test\\": "tests/src",
            "Graze\\DataNode\\Test\\Unit\\": "tests/unit"
        }
    },
    "scripts": {
        "test": [
            "composer lint --quiet",
            "composer test:unit --quiet"
        ],
        "test:unit": [
            "vendor/bin/phpunit --colors=always --testsuite unit"
        ],
        "lint": [
            "vendor/bin/phpcs -p --standard=PSR2 --warning-severity=0 src/ tests/"
        ],
        "lint:auto-fix": [
            "vendor/bin/phpcbf -p --standard=PSR2 src/ tests/"
        ]
    }
}
